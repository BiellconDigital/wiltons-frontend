fucsia  = #a10442
amarillo = #ebc100

@font-face {
	font-family: 'Heldustry';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

html
	height 100%
	margin 0
	padding 0

body
	height 100%
	width 90%
	margin 0 auto
	padding 0
.aside
	background-color fucsia
	width 10em !important
	padding 0
	margin 0

header
	position absolute
	width 99%
	margin 0 auto
	z-index 3
a
	color fucsia !important

#menu-standar
	font-family 'Times New Roman'
	position relative
	padding 0
	margin 0
	width 100%
	img
		width 10em
	menu
		width 100%
		margin 0 auto
		padding 0
		ul
			background-color white
			opacity 0.9
			list-style none
			width 100%
			padding 0
			margin 0
			li
				padding 1em
				border-bottom 1px dotted fucsia
				a
					color black

#panelContenido
	padding 0
	overflow auto
	height 100%
	.barraSuperior
		position absolute
		width 49%
		z-index 4
		right 12%
		.logo
			float right	
			margin-top 2.8em
			img
				width 95px

#fondo
	margin 5em 0.5em 0 0.5em
	position relative
	z-index 1
	.imgFondoNormal
	.imgFondoMovil
		position absolute

	.contenido
		margin-top 2.6em
		overflow auto
		position absolute
		width 98%
		z-index 15

#footer
	font-size 0.7em
	font-family 'Times New Roman'
	margin 0
	padding 0
	#footer-content
		background-color amarillo
		color fucsia
		font-weight bold
		padding 0.7em

@media screen and (min-width: 780px)
	#footer
		font-size 0.9em


@media screen and (min-width: 1024px)
	body
		width 96%
	#menu-standar
		width 16em
		img
			width 16em

	#panelContenido
		.barraSuperior
			right 5%
			.logo
				margin-top 1.8em
				img
					width 160px

	#fondo
		margin 7em 0.5em 0 0.5em
		padding 0
		.contenido
			margin-top 2em
			width 100%

	#footer
		font-size 1em

