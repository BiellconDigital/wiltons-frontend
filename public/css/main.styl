marron = #7d6350
cian = #EAF9F9

@font-face {
	font-family: 'Heldustry';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

html
	height 100%
	margin 0
	padding 0

body
	height 100%
	width 90%
	margin 0 auto
	padding 0

header
	position absolute
	width 99%
	margin 0 auto
	z-index 3
	#menu-standar
		position relative
		padding 0
		margin 0
		width 11em
		img
			width 11em
		menu
			width 13em
			margin 0 auto
			padding 0
			ul
				background-color white
				opacity 0.9
				list-style none
				width 13em
				padding 0
				margin 0
				li
					padding 1em
					border-bottom 1px dotted red


#panelContenido
	padding 0

#fondo
	margin-left 0
	margin-top 4em
	padding 0 0.7em
	position absolute
	z-index 1


#contenido
	margin-top 2em
	z-index 4


@media screen and (min-width: 1024px)
	body
		width 96%
	header
		#menu-standar
			width 16em
			img
				width 16em

	#fondo
		background-color white
		padding 0


